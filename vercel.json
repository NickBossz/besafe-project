{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/servidor.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/check-site",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/check-file",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/criarUsuario",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/usuario/:username",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/usuarios",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/excluirUsuario/:username",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/uploadperfilimage",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/posts/:path*",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/posts",
      "destination": "/backend/servidor.js"
    },
    {
      "source": "/forum/:path*",
      "destination": "/backend/servidor.js"
    }
  ]
}
