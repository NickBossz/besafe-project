{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/servidor.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/check-site",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/check-file",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/criarUsuario",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/usuario/(.*)",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/usuarios",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/excluirUsuario/(.*)",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/uploadperfilimage",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/posts(.*)",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/forum/(.*)",
      "dest": "backend/servidor.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
