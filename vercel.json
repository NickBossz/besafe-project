{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/servidor.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/check-site",
      "methods": ["POST", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/check-file",
      "methods": ["POST", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/criarUsuario",
      "methods": ["POST", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/usuario/(.*)",
      "methods": ["GET", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/usuarios",
      "methods": ["GET", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/excluirUsuario/(.*)",
      "methods": ["DELETE", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/uploadperfilimage",
      "methods": ["POST", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/posts/(.*)/vote",
      "methods": ["POST", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/posts/(.*)",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/posts",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/forum/(.*)",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "dest": "backend/servidor.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
