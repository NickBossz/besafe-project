{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(check-site|check-file|criarUsuario|usuario|usuarios|excluirUsuario|uploadperfilimage|posts|forum)/:path*",
      "destination": "/api/:path*"
    }
  ]
}
