{
  "name": "besafe-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BE SAFE - Security Awareness Platform",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend",
    "dev:frontend": "npm run start --workspace=frontend",
    "dev:backend": "npm run start --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "clean:build": "rm -rf frontend/build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickBossz/besafe-project.git"
  },
  "author": "",
  "license": "ISC"
}
